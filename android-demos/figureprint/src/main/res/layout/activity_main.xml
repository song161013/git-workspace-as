<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TVLog"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:background="#607b8b"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:textColor="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/BOpen"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.06"
                android:text="@string/open" />

            <Button
                android:id="@+id/BTInit"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.06"
                android:text="录入指纹" />

            <Button
                android:id="@+id/BClose"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.04"
                android:text="@string/close" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BTLogIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="单次搜索" />

            <Button
                android:id="@+id/BTLogInTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="单次搜索test" />

            <Button
                android:id="@+id/BTLogOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="清空指纹库" />

            <Button
                android:id="@+id/upImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上传图像" />

            <Button
                android:id="@+id/devMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="查看设备信息" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_get_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="录入图像" />

            <Button
                android:id="@+id/btn_get_image_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="录入图像2" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/fingerImage"
            android:layout_width="256px"
            android:layout_height="288px" />
    </LinearLayout>

</LinearLayout>